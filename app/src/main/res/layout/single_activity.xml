<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/five">


                <ImageView
                    android:id="@+id/back_arrow"
                    android:layout_width="@dimen/thirty"
                    android:layout_height="@dimen/thirty"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_marginTop="@dimen/fifteen"
                    android:src="@drawable/ic_arrow_back_black_24dp" />

                <EditText
                    android:id="@+id/edt_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_marginRight="@dimen/twenty"
                    android:layout_marginTop="@dimen/five"
                    android:layout_toRightOf="@+id/back_arrow"
                    android:hint=" Write your activity here"
                    android:textColorHint="#686955"
                    android:textSize="21sp"
                    android:textStyle="bold"

                    />


            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_fifty"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:layout_marginTop="@dimen/twenty">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/completion_baseline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_marginTop="@dimen/twenty"
                    android:text=" How well have you done today?"
                    android:textColor="#686955"
                    android:textSize="18sp"

                    />


                <com.rey.material.widget.Slider
                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_marginRight="@dimen/twenty"
                    android:layout_marginTop="@dimen/ten"
                    app:sl_discreteMode="true"
                    app:sl_maxValue="50"
                    app:sl_minValue="10"
                    app:sl_stepValue="10"

                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/two_hundred"
            android:layout_margin="@dimen/ten">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/quote_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/twenty"
                    android:text="If you dream it you can do it "
                    android:textAlignment="center"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/quote_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/ten"
                    android:text="If you dream it you can do it "
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"

                    />


            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_show_chart_white_24dp"
        app:backgroundTint="@color/first_color"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp" />


